<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_profile_name_scene"
    tools:context=".ProfileName">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SettingsChangeNameLabel"
                android:layout_width="133dp"
                android:layout_height="41dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/font1"
                android:text="아기 이름"
                android:textFontWeight="600"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/SettingsCurrentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/font1"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="25dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SettingsCurrentNameLabel"
                android:layout_width="57dp"
                android:layout_height="41dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/font1"
                android:text="이름"
                android:textFontWeight="600" />

            <EditText
                android:id="@+id/SettingsChangeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:ems="10"
                android:fontFamily="@font/font1"
                android:hint="변경할 이름을 입력해주세요"
                android:inputType="textPersonName"
                android:textFontWeight="600" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/ChangeNameButton"
        android:layout_width="104dp"
        android:layout_height="56dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/font1"
        android:text="@string/변경"
        android:textFontWeight="600" />

</LinearLayout>