<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFD7">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baby_background3"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/current_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2021.05.11(Tue)"
            android:fontFamily="@font/font1"
            android:textFontWeight="600"
            android:textSize="40dp"
            android:layout_marginTop="35dp"
            android:textAlignment="center"/>



    </RelativeLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0, 1">
                <TableRow>

                    <TextView
                        android:id="@+id/babyname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="우리 아기"
                        android:layout_marginBottom="10dp"
                        android:layout_span="3"
                        android:fontFamily="@font/font1"
                        android:textFontWeight="600"
                        android:textSize="35dp"/>


                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/baby_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2021.02.14"
                        android:fontFamily="@font/font1"
                        android:textFontWeight="400"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/babyage1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="만 3세 0개월"
                        android:fontFamily="@font/font1"
                        android:textFontWeight="400"
                        android:textSize="20dp"/>
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/babyage2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36개월 22일"
                        android:fontFamily="@font/font1"
                        android:textFontWeight="400"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/babyage3"
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="159주 5일"
                        android:textFontWeight="400"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/babyage4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1118일"
                        android:fontFamily="@font/font1"
                        android:textFontWeight="400"
                        android:textSize="20dp"/>
                </TableRow>
            </TableLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="16dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0, 1">

                <TableRow>

                    <TextView
                        android:id="@+id/temper"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font1"
                        android:text="온도"
                        android:textFontWeight="700"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/temper_value"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font1"
                        android:text="---"
                        android:textFontWeight="600"
                        android:textSize="20dp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/humi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="습도"
                        android:textFontWeight="700"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/humi_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font1"
                        android:text="---"
                        android:textFontWeight="600"
                        android:textSize="20dp" />
                </TableRow>


            </TableLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="13dp"
            >

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stretchColumns="0, 1">

                        <TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_span="2"
                        >

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/good" />

                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <TableRow>

                                <TextView
                                    android:id="@+id/dust"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font1"
                                    android:text="PM2.5"
                                    android:textFontWeight="700"
                                    android:textSize="15dp" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:id="@+id/dust_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font1"
                                    android:text="---"
                                    android:textFontWeight="600"
                                    android:textSize="20dp" />
                            </TableRow>
                        </TableLayout>



                    </LinearLayout>
                        </TableRow>

                        <TableRow android:layout_marginTop="2dp">

                            <TextView
                                android:id="@+id/dust_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font1"
                                android:text="미세먼지 농도  : "
                                android:gravity="right"
                                android:textFontWeight="700"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/dust_result"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font1"
                                android:text="좋음"
                                android:textFontWeight="600"
                                android:layout_span="1"
                                android:textSize="10dp" />
                        </TableRow>
                    </TableLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>